<Window x:Class="Kinect_R_and_D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="Project X" Height="600" Width="800">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        <k:KinectRegion Name="kinectRegion"/>
        <k:KinectUserViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
        k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Margin="80,80,80,80" RenderTransformOrigin="0.478,0.492" />
        <Border BorderBrush="AliceBlue" BorderThickness="2" HorizontalAlignment="Stretch" Margin="80,80,79.6,80.4" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
